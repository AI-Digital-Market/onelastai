# Production Environment Variables for onelastai.com
# Copy this file to .env.production and fill in your actual values

# Domain Configuration
NEXT_PUBLIC_SITE_URL=https://onelastai.com
NEXTAUTH_URL=https://onelastai.com

# Authentication
NEXTAUTH_SECRET=your-random-secret-string-here

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database (if using)
DATABASE_URL=your-database-url-here

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID=GA-your-id-here
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Email Service (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS Configuration (for file uploads, etc.)
AWS_REGION=us-east-1
AWS_S3_BUCKET=onelastai-assets
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...

# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Social Media Integration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Security
CSRF_SECRET=your-csrf-secret-here
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
